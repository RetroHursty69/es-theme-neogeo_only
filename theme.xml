	<size>1 1</size>
  </image>
 

 <helpsystem name="help">
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.016</fontSize>
	<pos>0.01 0.98</pos>
	<textColor>ffffff</textColor>
    <iconColor>ffffff</iconColor>  
 </helpsystem>
  
</view>
</feature>





<!-- Gamelist View -->

<view name="basic, detailed, video, grid">

 <image name="background" extra="true">
	<tile>false</tile>
	<path>./_assets/ingame-global-bg.jpg</path>
	<size>1 1</size>
	<pos>0 0</pos>
 </image>

 <image name="logo2" extra="true">
	<path>./_assets/logos/${system.theme}.png</path>
	<color>ffffff</color>
	<origin>0.5 0.5</origin>
	<pos>0.15 0.13</pos>
	<maxSize>0.26 0.155</maxSize>
 </image>


 
<textlist name="gamelist">
	<selectorColor>f4171c</selectorColor>
	<selectorImagePath>./_assets/icon.png</selectorImagePath>
	<selectedColor>ffffff</selectedColor>
	<selectorHeight>.048</selectorHeight>
	<primaryColor>f4171c</primaryColor>
	<secondaryColor>eac428</secondaryColor>
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>left</alignment>
	<forceUppercase>1</forceUppercase>
	<pos>0.01 0.248</pos>
	<size>0.27 0.74</size>
	<fontSize>0.03</fontSize>
	<lineSpacing>1.4</lineSpacing>
	<horizontalMargin>0.002</horizontalMargin>
</textlist>

<helpsystem name="help">
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.018</fontSize>
	<pos>0.46 0.919</pos>
	<textColor>f4171c</textColor>
    <iconColor>f4171c</iconColor>
</helpsystem>

<!-- Hide Unused Elements -->	
</view>

<view name="basic, detailed, grid">
 <image name="md_image">
	<origin>0.5 0.5</origin>
	<pos>0.6925 0.3915</pos>
	<maxSize>0.4292 0.5297</maxSize>
 </image>
</view>

<feature supported="video">

<view name="video">
